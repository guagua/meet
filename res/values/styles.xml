    <style name="setting_single_text">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">16dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="address_bg_arrow">
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_image_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="setting_version_text">
        <item name="android:textColor">@color/c_FFB2B6BA</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
