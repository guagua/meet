    <style name="setting_version_text_1">
        <item name="android:textColor">@color/c_FF515865</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="voic_play_bnt_type_normal">
        <item name="android:layout_width">@dimen/voice_play_bnt_width_0</item>
        <item name="android:layout_height">@dimen/voice_play_bnt_height_0</item>
    </style>

    <style name="voic_play_bnt_type_reply">
        <item name="android:layout_width">@dimen/voice_play_bnt_width_1</item>
        <item name="android:layout_height">@dimen/voice_play_bnt_height_1</item>
    </style>

    <!-- 分享对话框的动画样式 -->
    <style name="share_dialog_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/share_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/share_dialog_exit</item>
    </style>

    <!-- Motu start -->
    <style name="top_dark_txt">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#eaf0f4</item>
        <item name="android:shadowColor">#ff1d2022</item>
        <item name="android:shadowDy">1.0</item>
